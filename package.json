{
    "name": "cap_dispatches",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": ">=5",
        "@sap/xssec": "^3",
        "express": "^4",
        "hdb": "^0.19.0",
        "lokijs": "^1.5.6",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.102.17",
        "@sapui5/ts-types": "^1.92.2",
        "eslint": "^7.32.0",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-uidispatchesportal": "cds watch --open uidispatchesportal/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy capdispatches --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-orders": "cds watch --open orders/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-cargoordermanagement": "cds watch --open cargoordermanagement/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "engines": {
        "node": "^16.16"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "build": {
            "tasks": [
                {
                    "for": "hana",
                    "dest": "../db"
                },
                {
                    "for": "node-cf"
                }
            ]
        },
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                },
                "auth": {
                    "kind": "xsuaa"
                }
            },
            "db": {
                "kind": "sql"
            }
        }
    },
    "sapux": [
        "app/uidispatchesportal",
        "app/orders",
        "app/cargoordermanagement"
    ]
}